
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
  </head>
  <body class="profile">
    <%= render "layouts/navbar" %>
    <div class="user-profile">
      <h1>
        <%= "#{@user.first_name.capitalize} #{@user.last_name.capitalize}"%>
      </h1>
      <div class="pic">
        <%= render "/layouts/user_icon" %>
      </div>

      <div>
        <p><strong>About Me:</strong> <%= @user.bio %></p>
        <p><strong>Email:</strong>  <%= @user.email %></p>
        <p><%= link_to 'Edit Profile', edit_user_path(@user) %></p>
        <p><%= link_to 'Edit Trips', edit_user_trips_path(@user) %></p>
      </div>
    </div>
  </body>
</html>
